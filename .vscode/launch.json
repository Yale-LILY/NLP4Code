    "version": "0.2.0",
    "configurations": [


        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        },
        {
            "name": "Debug gpt fine-tuning",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/finetuning/trainer.py",
            "args": [
                "fit",
                "--config",
                "finetuning/training_configs/mathqa_gpt_finetuning.yaml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        },
    ]
}